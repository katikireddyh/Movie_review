<div class="primary-navigation">
  <div id='special_notification'></div>
  <div class="desktop-menu menu hidden-md-down qa-hook-large-navigation">
    <div class="row">
      <div class="col-lg-2 col-md-3 logo-container">
        <%= link_to root_path do %>
          <%= image_tag "contracted/logo.svg", class: "my-2", width: "146px", alt: "Gazelle Logo" %>
        <% end %>
      </div>
      <div class="col align-items-stretch">
        <div class="d-flex flex-column fill_height" >
          <div class="text-right smaller_links" >
            <div class="mb-1 gray_links">
              <%= link_to 'Help', help_faq_sell_path %>
              <span>|</span>
              <%= link_to 'The Gazelle Advantage', gazelle_reviews_path, id: 'header_browse_category_link' %>
            </div>
            <div class="qa-hook-top-links" id="omnilogin">
              <%= link_to 'Sell in Bulk', business_index_path %> <span>|</span>
              <%= link_to 'How It Works', help_how_it_works_path, id: 'how_it_works_link', class: "qa-hook-how-it-works-link" %> <span>|</span>
              <%= link_to "Locate a Kiosk", "https://locations.gazelle.com/", target: "_blank", rel: "noopener noreferrer" %> <span>|</span>
              <%= link_to 'Track Offers', track_path, class: 'track_my_offers qa-hook-track-offers-link' %> <span>|</span>
              <%= link_to 'Log in', login_direct_path, class: 'login qa-hook-login-link' %>
            </div>
          </div>
          <div class="mt-auto">
            <div class="row hidden-md-down">
              <div class="col-8 offset-1 text-center">
                <div class="btn-group buy-sell-tabs qa-hook-buy-sell-tabs" role="group">
                  <%= link_to "SELL", trade_in_path, class: "btn btn-primary qa-hook-sell-link active-tab" %>
                  <%= link_to "BUY CERTIFIED", "//buy.gazelle.com", class: "btn btn-default blue-100 qa-hook-buy-cert-link" %>
                </div>
              </div>
              <div class="col-3 text-right">
                <div class="checkout_area pull-right">
                  <%= render partial: "page_frame/activity_feed" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="mobile-menu menu hidden-lg-up">
    <div class="row mb-2 align-items-center">
      <div class="col-3">
        <%= link_to "#mainMenu", "class"=>"orange", "aria-expanded"=>"false", "aria-controls"=>"mainMenu", "data-toggle"=>"collapse" do %>
          <i class="fa fa-bars fa-3x" aria-hidden="true"></i>
        <% end %>
      </div>
      <div class="col-6 text-center logo">
        <%= link_to root_path do %>
          <%= image_tag "contracted/logo.svg", alt: "Gazelle Logo" %>
        <% end %>
      </div>
      <div class="col-3">
        <div class="mobile_checkout_area pull-right">
          <div class="activity_feed pull-right">
            <div class="cart"></div>
            <div class="inline_cart"></div>
          </div>
        </div>
      </div>
      <div class="col-12 collapse" id="mainMenu">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Sell an Item', trade_in_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Sell in Bulk', business_index_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Buy Certified', "//buy.gazelle.com", class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'How it Works', help_how_it_works_path, id: 'how_it_works_link', class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Locate a Kiosk", "https://locations.gazelle.com/", target: "_blank", rel: "noopener noreferrer", class: "nav-link" %>
          </li>
          <% if false %>
            <li class="nav-item active">
              <%= link_to 'Track Offers', track_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to 'Log in', login_direct_path, class: 'nav-link' %>
            </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to 'The Gazelle Advantage', gazelle_reviews_path, id: 'header_browse_category_link', class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Help', help_faq_sell_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

