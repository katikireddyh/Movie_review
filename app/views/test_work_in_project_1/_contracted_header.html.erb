<div class="row light-bottom-border-spacer hidden-lg-up">&nbsp;</div>
<%= javascript_injector 'logged_in_omnilogin_view' do -%>
  <%= link_to 'Sell in Bulk', business_index_path %> <span>|</span>
  <%= link_to 'How It Works', help_how_it_works_path, id: 'how_it_works_link', class: "qa-hook-how-it-works-link" %> <span>|</span>
